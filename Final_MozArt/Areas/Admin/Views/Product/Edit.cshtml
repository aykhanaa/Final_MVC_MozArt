@model ProductEditVM

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <h2>Edit Product</h2>
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label>New Photos</label>
            <input asp-for="NewPhotos" type="file" class="form-control" multiple />
        </div>

        <div class="mb-3">
            <label>Existing Images</label><br />
            @foreach (var image in Model.ExistingImages)
            {
                <div class="d-inline-block me-2 mb-2">
                    <img src="@image.Url" class="img-thumbnail" style="width: 100px;" />
                </div>
            }
        </div>

        <div class="mb-3">
            <label>Colors</label>
            <select asp-for="SelectedColorIds" asp-items="Model.ColorSelectList" class="form-control" multiple></select>
        </div>

        <div class="mb-3">
            <label>Tags</label>
            <select asp-for="SelectedTagIds" asp-items="Model.TagSelectList" class="form-control" multiple></select>
        </div>

        <div class="mb-3">
            <label>Category</label>
            <select asp-for="CategoryId" asp-items="Model.CategorySelectList" class="form-control"></select>
        </div>

        <div class="mb-3">
            <label>Brand</label>
            <select asp-for="BrandId" asp-items="Model.BrandSelectList" class="form-control"></select>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
