@model Final_MozArt.ViewModels.Product.ProductDetailVM

<h2>@Model.Name</h2>

<p><strong>Price:</strong> @Model.Price</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Brand:</strong> @Model.BrandName</p>
<p><strong>Category:</strong> @Model.CategoryName</p>

@if (Model.Images != null && Model.Images.Any())
{
    <div>
        <h4>Images:</h4>
        @foreach (var image in Model.Images)
        {
            <img src="~/assets/img/home/@image.Image" width="150" />
        }
    </div>
}

@if (Model.ColorNames != null)
{
    <p><strong>Colors:</strong> @string.Join(", ", Model.ColorNames)</p>
}

@if (Model.TagNames != null)
{
    <p><strong>Tags:</strong> @string.Join(", ", Model.TagNames)</p>
}
