@model IEnumerable<Final_MozArt.ViewModels.Product.ProductVM>

@{
    ViewData["Title"] = "Products";
}

<h2>Product List</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Create New Product</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td><img src="~/assets/img/home/@product.Image" width="80" /></td>
                <td>@product.Name</td>
                <td>@product.Price ₼</td>
                <td>@product.BrandName</td>
                <td>@product.CategoryName</td>
                <td>@product.CreateDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
