@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Products";
}

<div class="container my-5" style="max-width: 1000px;">
    <h2 class="mb-4 text-center">Product List</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-primary">+ Create New Product</a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 160px;">Image</th>
                <th>Name</th>
                <th style="width: 100px;">Price</th>
                <th>Brand</th>
                <th>Category</th>
                <th style="width: 120px;">Date</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        <img src="~/assets/img/home/@product.Image" alt="@product.Name" class="img-thumbnail" style="width: 150px; height: auto;" />
                    </td>
                    <td>@product.Name</td>
                    <td>@product.Price ₼</td>
                    <td>@product.BrandName</td>
                    <td>@product.CategoryName</td>
                    <td>@product.CreateDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@product.Id" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
