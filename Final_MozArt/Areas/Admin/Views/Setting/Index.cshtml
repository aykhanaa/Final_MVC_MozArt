@model List<Setting>

<div class="container my-5">
    <h1 class="text-center mb-4">Settings</h1>
    <a class="btn btn-success mb-3" asp-action="Create" style="margin-left: 12pc;">Create</a>

    <table class="table table-striped" style="margin-left: 12pc;width: 76pc;">
        <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var setting in Model)
            {
                <tr>
                    <td>@setting.Key</td>
                    <td>@setting.Value</td>
                    <td>
                        @if (!string.IsNullOrEmpty(setting.Value) && (setting.Value.EndsWith(".png") || setting.Value.EndsWith(".jpg") || setting.Value.EndsWith(".jpeg") || setting.Value.EndsWith(".gif") || setting.Value.EndsWith(".webp")))
                        {
                            <img src="~/assets/img/settings/@setting.Value" alt="@setting.Key" style="width: 80px; height: 80px;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Detail" asp-route-id="@setting.Id">Detail</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@setting.Id">Edit</a>
                        <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@setting.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
