@model SettingEditVM

<div class="container mt-5" style="margin-left:30px">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        @if (Model.Value?.ToLower().EndsWith("jpg") == true ||
        Model.Value.ToLower().EndsWith("png") ||
        Model.Value.ToLower().EndsWith("jpeg"))
        {
            <label asp-for="Photo">@Model.Key</label>
            <div class="image mt-2 mb-2">
                <img src="~/assets/img/settings/@Model.Value" style="width:50%" />
            </div>
            <div class="form-group">
                <input asp-for="Photo" type="file" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        }
        else
        {
            <div class="form-group">
                <label asp-for="Value">@Model.Key</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        }

        <button type="submit" class="btn btn-primary mr-4">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>
