@section css {
    <link rel="stylesheet" href="~/assets/css/about/about.css">
}


<main>
    <section id="shop-title-area">
        <div class="page-title-size section">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="page-title">
                            <h1 class="title">About</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active">About</li>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>


    <section id="about-area">
        <div class="about-size section-padding pb-0">
            <div class="container">
                <div class="row learts-mb-n30">

                    <div class="col-md-6 col-12 align-self-center learts-mb-30">
                        <div class="about-us">
                            <span class="sub-title">Live out your life.</span>
                            <h2 class="title">The happiness of <br> crafting artworks</h2>
                            <div class="desc">
                                <p>
                                    It’s all about the joy when finally you have done something beautiful on your own
                                    and
                                    observe it with quite a great deal of proud & successful feeling.
                                </p>
                            </div>
                            <a asp-controller="Blog" asp-action="Index" class="link" style="margin-right: 24pc;">Learn more</a>
                        </div>
                    </div>
                    <div class="col-md-6 col-12 text-center learts-mb-30">
                        <img src="~/assets/img/about/about-1.webp" alt="">
                    </div>

                </div>
            </div>

        </div>
    </section>



    <section id="service-area">
        <div class="service-size section-padding">
            <div class="container">
                <div class="row row-cols-md-3 row-cols-1 learts-mb-n30">

                    <div class="col learts-mb-30">
                        <div class="icon-box">
                            <div class="inner">
                                <div class="content" style="margin-right: 10pc;">
                                    <h6 class="title">FREE SHIPPING</h6>
                                    <p>
                                        Once receiving your order, we will turn your products around in 3- 5 business
                                        days.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col border-left border-right learts-mb-30">
                        <div class="icon-box">
                            <div class="inner">
                                <div class="content">
                                    <h6 class="title">FREE RETURNS</h6>
                                    <p>
                                        We accept returns for freshly purchased products within 7 days from the
                                        payment.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col learts-mb-30">
                        <div class="icon-box" style="margin-right: -8pc;">
                            <div class="inner">
                                <div class="content">
                                    <h6 class="title">SECURE PAYMENT</h6>
                                    <img class="img-hover-color " src="~/assets/img/about/pay.webp" alt="">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>



    <section id="video-banner-area">
        <div class="video-banner-size">
            <div class="container">
                <div class="video-banner"
                     style="background-image: url(assets/img/about/video-banner-2.webp);background-repeat: no-repeat; margin-bottom: 10pc;">
                    <div class="content" style="margin-bottom: 16pc;">
                        <a href="https://www.youtube.com/watch?v=1jSsy7DtYgc" class="video-popup">
                            <img src="~/assets/img/about/button-play-light.webp" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <div id="videoModal" class="video-modal">
        <div class="video-modal-content">
            <span class="video-modal-close">&times;</span>
            <div class="video-iframe-container">
                <iframe id="videoIframe" class="video-iframe" allowfullscreen></iframe>
            </div>
        </div>
    </div>



    <section id="service-area">
        <div class="section section-padding" style="margin-top: -15pc;">
            <div class="container">
                <div class="row learts-mb-n30">
                    <div class="col-xl-3 col-lg-4 col-12 me-auto learts-mb-30">
                        <h1 class="fw-400">The difference when you shop Learts!</h1>
                    </div>
                    <div class="col-lg-8 col-12 learts-mb-30">
                        <div class="row learts-mb-n30">

                            <div class="col-md-6 col-12 learts-mb-30" style="margin-left: -4pc;">
                                <p class="text-heading fw-600 learts-mb-10">Free Shipping</p>
                                <p style="width: 25pc;font-size: medium;font-family: system-ui;">
                                    Once receiving your
                                    order,
                                    we will turn your products around in 3-5 business days.
                                </p>
                            </div>

                            <div class="col-md-6 col-12 learts-mb-30" style="margin-left: 4pc;">
                                <p class="text-heading fw-600 learts-mb-10">Free Returns</p>
                                <p style="width: 27pc;font-size: medium;font-family: system-ui;">
                                    We accept returns
                                    for
                                    freshly purchased products within 7 days from the payment.
                                </p>
                            </div>

                            <div class="col-md-6 col-12 learts-mb-30" style="margin-left: -4pc;">
                                <p class="text-heading fw-600 learts-mb-10">Superb Quality</p>
                                <p style="width: 28pc;font-size: medium;font-family: system-ui;">
                                    We make commitments
                                    that
                                    the quality of our products will and always will be superb.
                                </p>
                            </div>

                            <div class="col-md-6 col-12 learts-mb-30" style="margin-left: 4pc;">
                                <p class="text-heading fw-600 learts-mb-10">Free Wrapping</p>
                                <p style="width: 28pc;font-size: medium;font-family: system-ui;">
                                    Upon request, items
                                    bought
                                    as gifts from our store can receive free wrapping service.
                                </p>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </section>



    <section id="line-area">
        <div class="container">
            <hr class="between-line">
        </div>
    </section>


    <section id="insta-area">
        <div class="insta-size section-padding">
            <div class="container">
                <div class="insta-title text-center">
                    <h3 class="sub-title">Follow us on Instagram</h3>
                    <h2 class="title">mozArt_shop</h2>
                </div>

                <section id="insta-area"></section>
                <div class="insta-slider-container">
                    <div class="slider-wrapper">
                        <div class="instafeed-carousel" id="instafeed-slider">
                            <a class="instafeed-item" href="#">
                                <img src="~/assets/img/about/instagram-1.webp" alt="instagram image" />
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="instafeed-item" href="#">
                                <img src="~/assets/img/about/instagram-2.webp" alt="instagram image" />
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="instafeed-item" href="#">
                                <img src="~/assets/img/about/instagram-3.webp" alt="instagram image" />
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="instafeed-item" href="#">
                                <img src="~/assets/img/about/instagram-4.webp" alt="instagram image" />
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="instafeed-item" href="#">
                                <img src="~/assets/img/about/instagram-3.webp" alt="instagram image" />
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="instafeed-item" href="#">
                                <img src="~/assets/img/about/instagram-3.webp" alt="instagram image" />
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="instafeed-item" href="#">
                                <img src="~/assets/img/about/instagram-3.webp" alt="instagram image" />
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="instafeed-item" href="#">
                                <img src="~/assets/img/about/instagram-3.webp" alt="instagram image" />
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>

                    <button class="slider-btn slider-btn-prev" id="prevBtn">
                        <span class="arrow-icon">‹</span>
                    </button>
                    <button class="slider-btn slider-btn-next" id="nextBtn">
                        <span class="arrow-icon">›</span>
                    </button>
                </div>
            </div>
        </div>
    </section>

</main>



@section scripts {
    <script src="~/assets/js/about/about.js"></script>
}