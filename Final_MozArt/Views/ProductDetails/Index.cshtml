<main>
    <section id="product-detail-area">
        <div class="page-title-size section" style="margin-bottom: 4pc;">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="page-title">
                            <h1 class="title">Product detail</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active">Product details</li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>



    <div class="section section-padding border-bottom">
        <div class="container">
            <div class="row learts-mb-n40">


                <div class="col-lg-6 col-12 learts-mb-40">
                    <div class="product-images">
                        <div class="product-gallery-slider">
                            <div>
                                <img src="assets/img/product-details/product-4.webp" alt="">
                            </div>
                            <div>
                                <img src="assets/img/product-details/product-4.webp" alt="">
                            </div>
                            <div>
                                <img src="assets/img/product-details/product-4.webp" alt="">
                            </div>
                            <div>
                                <img src="assets/img/product-details/product-4.webp" alt="">
                            </div>
                        </div>
                        <div class="product-thumb-slider">
                            <div class="item">
                                <img src="assets/img/blog/blog-1.webp" alt="">
                            </div>
                            <div class="item">
                                <img src="assets/img/blog/blog-2.webp" alt="">
                            </div>
                            <div class="item">
                                <img src="assets/img/blog/blog-3.webp" alt="">
                            </div>
                            <div class="item">
                                <img src="assets/img/blog/blog-4.webp" alt="">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-12 learts-mb-40">
                    <div class="product-summery">
                        <h3 class="product-title">Cleaning Dustpan & Brush</h3>
                        <div class="product-price">$38.00</div>
                        <div class="product-description">
                            <p>
                                Easy clip-on handle – Hold the brush and dustpan together for storage; the dustpan edge
                                is
                                serrated to allow easy scraping off the hair without entanglement. High-quality bristles
                                –
                                no burr damage, no scratches, thick and durable, comfortable to remove dust and smaller
                                particles.
                            </p>
                        </div>
                        <div class="product-variations">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="label"><span>Color</span></td>
                                        <td class="value">
                                            <div class="product-colors">
                                                <a href="#" data-bg-color="#ddc11d"></a>
                                                <a href="#" data-bg-color="#ffffff"></a>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="label"><span>Quantity</span></td>
                                        <td class="value">
                                            <div class="product-quantity">
                                                <span class="qty-btn minus"><i class="fa-solid fa-minus"></i></i></span>
                                                <input type="text" class="input-qty" value="1">
                                                <span class="qty-btn plus"><i class="fa-solid fa-plus"></i></i></span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="product-buttons">
                            <a href="wishlist.html" class="btn btn-icon btn-outline-body btn-hover-dark hintT-top"
                               data-hint="Add to Wishlist"><i class="far fa-heart"></i></a>
                            <a href="basket.html" class="btn btn-dark btn-outline-hover-dark">
                                <i class="fas fa-shopping-cart"></i>
                                Add
                                to Cart
                            </a>
                        </div>
                         
                        <div class="product-meta">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="label"><span>Brand</span></td>
                                        <td class="value">
                                            <ul class="product-brands">
                                                <li>
                                                    <a href="#">
                                                        <img src="assets/img/product-details/brand-1.webp"
                                                             alt="">
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="label"><span>Category</span></td>
                                        <td class="value">
                                            <ul class="product-category">
                                                <li><a href="#">Kitchen</a></li>
                                            </ul>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="label"><span>Tags</span></td>
                                        <td class="value">
                                            <ul class="product-tags">
                                                <li><a href="#">handmade</a></li>
                                                <li><a href="#">learts</a></li>
                                                <li><a href="#">mug</a></li>
                                                <li><a href="#">product</a></li>
                                                <li><a href="#">learts</a></li>
                                            </ul>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>



    <div class="section section-padding border-bottom" style="border-top: 1px solid #e0e0e0;">
        <div class="container">

            <ul class="nav product-info-tab-list">
                <li><a class="active" data-bs-toggle="tab" href="#tab-description">Description</a></li>
                <li><a data-bs-toggle="tab" href="#tab-reviews">Reviews</a></li>
            </ul>
            <div class="tab-content product-infor-tab-content">
                <div class="tab-pane fade show active" id="tab-description">
                    <div class="row">
                        <div class="col-lg-10 col-12 mx-auto" style="font-family: system-ui;font-size: 18px;">
                            <p>
                                Easy clip-on handle – Hold the brush and dustpan together for storage; the dustpan edge
                                is
                                serrated to allow easy scraping off the hair without entanglement. High-quality bristles
                                –
                                no burr damage, no scratches, thick and durable, comfortable to remove dust and smaller
                                particles. Rubber lip – The rubber lip on the front of the dustpan helps to remove all
                                dust
                                at once.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab-reviews">
                    <div class="product-review-wrapper">
                        <ul class="product-review-list">
                            <li>
                                <div class="product-review">
                                    <div class="thumb"><img src="assets/img/product-details/review-1.webp" alt=""></div>
                                    <div class="content">
                                        <div class="ratings">
                                        </div>
                                        <div class="meta">
                                            <h5 class="title">Edna Watson</h5>
                                            <span class="date">November 27, 2020</span>
                                        </div>
                                        <p>
                                            Thanks for always keeping your WordPress themes up to date. Your level of
                                            support
                                            and dedication is second to none.
                                        </p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="product-review">
                                    <div class="thumb"><img src="assets/img/product-details/review-2.webp" alt=""></div>
                                    <div class="content">
                                        <div class="meta">
                                            <h5 class="title">Scott James</h5>
                                            <span class="date">November 27, 2020</span>
                                        </div>
                                        <p>
                                            Thanks for always keeping your WordPress themes up to date. Your level of
                                            support
                                            and dedication is second to none.
                                        </p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="product-review">
                                    <div class="thumb"><img src="assets/img/product-details/review-3.webp" alt=""></div>
                                    <div class="content">
                                        <div class="meta">
                                            <h5 class="title">Owen Christ</h5>
                                            <span class="date">November 27, 2020</span>
                                        </div>
                                        <p>Good Product!</p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <span class="title">Add a review</span>
                        <div class="review-form">
                            <p class="note">Your email address will not be published. Required fields are marked *</p>
                            <form action="#">
                                <div class="row learts-mb-n30">
                                    <div class="col-md-6 col-12 learts-mb-30">
                                        <input type="text" placeholder="Name *">
                                    </div>
                                    <div class="col-md-6 col-12 learts-mb-30">
                                        <input type="email" placeholder="Email *">
                                    </div>
                                    <div class="col-12 learts-mb-10">
                                    </div>
                                    <div class="col-12 learts-mb-30">
                                        <textarea placeholder="Your Review *"></textarea>
                                    </div>
                                    <div class="col-12 text-center learts-mb-30">
                                        <button class="btn btn-dark btn-outline-hover-dark">
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>



